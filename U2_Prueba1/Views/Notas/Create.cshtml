@model U2_Prueba1.Models.Nota

@{
    ViewData["Title"] = "Create";
}

<h1>Ingresar Nueva Nota</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nota1" class="control-label"></label>
                <input asp-for="Nota1" class="form-control" />
                <span asp-validation-for="Nota1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ponderacion" class="control-label"></label>
                <input asp-for="Ponderacion" class="form-control" />
                <span asp-validation-for="Ponderacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstudiantesId" class="control-label"></label>
                <select asp-for="EstudiantesId" class ="form-control" asp-items="ViewBag.EstudiantesId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AsignaturasId" class="control-label"></label>
                <select asp-for="AsignaturasId" class ="form-control" asp-items="ViewBag.AsignaturasId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
